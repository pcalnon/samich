<% provide(:title, 'New Group') %>
<h1>New Group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/group_error_messages' %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :primary_investigator %>
      <%= f.text_field :primary_investigator %>

      <%= f.label :department %>
      <%= f.text_field :department %>

      <%= f.label :office %>
      <%= f.text_field :office %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.submit "New Group", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

