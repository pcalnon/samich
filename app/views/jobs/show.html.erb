      <li class="jobs" id="label"  >Cores Requested:</li>
      <li class="jobs" id="content"><%= @job.cores_requested %>&nbsp;</li>
      <li class="jobs" id="label"  >Attributes Requested:</li>
      <li class="jobs" id="content"><%= @job.attribute_requested %>&nbsp;</li>
      <li class="jobs" id="label"  >Memory Requested:</li>
      <li class="jobs" id="content"><%= @job.memory_requested %>&nbsp;</li>
      <li class="jobs" id="label"  >Walltime Requested:</li>
      <li class="jobs" id="content"><%= @job.walltime_requested %>&nbsp;</li>
      <li class="jobs" id="label"  >Submit Flags:</li>
      <li class="jobs" id="content"><%= @job.submit_flags %>&nbsp;</li>
      <li class="jobs" id="label"  >Node List:</li>
      <li class="jobs" id="content"><%= @job.node_list %>&nbsp;</li>
      <li class="jobs" id="label"  >Nodes Used:</li>
      <li class="jobs" id="content"><%= @job.nodes_used %>&nbsp;</li>
