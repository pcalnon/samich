      <li class="jobs" id="content"><%= @job.user_id %>&nbsp;</li>
      <li class="jobs" id="label"  >Queue:</li>
      <li class="jobs" id="content"><%= job_queue = JobQueue.find(@job.queue_id).name %>&nbsp;</li>
      <li class="jobs" id="label"  >Job Name:</li>
      <li class="jobs" id="content"><%= @job.name %>&nbsp;</li>
      <li class="jobs" id="label"  >Nodes Requested:</li>
